{
  "version": "2025-09-12T00:00:00Z",
  "default": {
    "min_matches": "all",
    "case_insensitive": true,
    "strip_accents": true,
    "strip_urls": true,
    "enabled": true,
    "agg_min_count": 5,
    "lookback_minutes": 60
  },
  "groups": [
    {
      "id": "crypto_linked_accounts",
      "description": "coin + linked + account in the same message",
      "keywords": ["coin", "linked", "account"],
      "min_matches": 3
    },
    {
      "id": "card_refund",
      "description": "refund + chargeback + dispute (min 2)",
      "keywords": ["refund", "chargeback", "dispute"],
      "min_matches": 2,
      "exclusions": ["support", "official channel"]
    },

    {
      "id": "fraud_risk_us_ca",
      "description": "If message contains at least 3 financial/risk terms (US & CA only)",
      "keywords": [
        "alert",
        "contact", "call", "dial", "reach",
        "attempted", "attempt", "detected",
        "debit", "charge", "charged", "deposit", "transaction", "transfer", "purchase",
        "account", "card", "password", "passwords",
        "denied", "failed", "blocked", "deny", "limited", "restricted", "expired", "risk",
        "authorize", "update", "unauthorized", "protect", "cancellation", "restore"
      ],
      "min_matches": 3,
      "regions": ["US", "CA"]
    },

    {
      "id": "parcel_delivery_us_ca",
      "description": "Alert if message contains parcel/order + waiting + delivery terms (US & CA only)",
      "keywords": [
        "order", "package", "parcel",
        "waiting", "awaiting",
        "delivery", "send"
      ],
      "min_matches": 3,
      "regions": ["US", "CA"]
    }
  ]
}
